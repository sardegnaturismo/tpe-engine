              'default' => 0),          
      ),
      'unique keys' => array(
          'uuid' => array('uuid')
      ),
      'primary key' => array('id'),
  );
  
  return $schema;
}



function copycat_install() {
  drupal_install_schema('copycat');
  variable_set();
  drupal_set_message('Copycat installed.');
}

function copycat_uninstall() {
  $rs = db_query("select name from {variable} where name like 'copycat_%%'");
  foreach ($rs as $o) {
    variable_del($o->name);
  }

  drupal_uninstall_schema('copycat');
  drupal_set_message('Copycat uninstalled.');
}

