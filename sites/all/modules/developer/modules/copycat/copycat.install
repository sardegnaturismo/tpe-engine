              'unsigned' => TRUE,
              'not null' => TRUE),
          'vid' => array(
              'description' => 'The vid of the node in the source server.',
              'type' => 'int',
              'unsigned' => TRUE,
              'not null' => TRUE,
              'default' => 0),
          'uuid' => array(
              'description' => 'The uuid of the node server.',
              'type' => 'char',
              'length' => 36,
